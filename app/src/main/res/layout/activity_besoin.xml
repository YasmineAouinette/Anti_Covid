<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BesoinActivity"
    android:background="@drawable/bb">

    <View
        android:id="@+id/divider"
        android:layout_width="349dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:translationX="25dp"
        android:translationY="131dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text1"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:translationX="190dp"
        android:translationY="140dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text2"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:translationX="30dp"
        android:translationY="160dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:rotationY="4"
        android:translationX="50dp"
        android:translationY="50dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_call" />

            <TextView
                android:id="@+id/appel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/appel"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:rotationY="4"
        android:translationX="50dp"
        android:translationY="210dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/floatingActionButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" />

            <TextView
                android:id="@+id/aide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/aide1"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:translationX="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:rotationY="4"
        android:translationX="50dp"
        android:translationY="300dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/floatingActionButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" />

            <TextView
                android:id="@+id/aide2"
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:text="@string/aide2"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                android:translationX="48dp"
                android:translationY="5dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:rotationY="4"
        android:translationX="50dp"
        android:translationY="390dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/floatingActionButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" />

            <TextView
                android:id="@+id/aide3"
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:text="@string/aide3"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                android:translationX="50dp"
                android:translationY="5dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:rotationY="4"
        android:translationX="50dp"
        android:translationY="480dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/floatingActionButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" />

            <TextView
                android:id="@+id/aide4"
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:text="@string/aide4"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:translationX="55dp"
                android:translationY="5dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/typeAide"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textColor="#FF03DAC5"
        android:textSize="18sp"
        android:translationX="50dp"
        android:translationY="550dp"
        android:text="@string/typeAide"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:rotationY="4"
        android:translationX="50dp"
        android:translationY="650dp"
        app:cardBackgroundColor="#FF03DAC5"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/button"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>